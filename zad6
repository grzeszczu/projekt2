#include <iostream>
#include <deque>
#include <cstdlib>
#include <ctime>
#include <iomanip>


using namespace std;

class Stacja
{
    private:

    deque <char> pociag;
    deque <char> cel1;
    deque <char> cel2;
    deque <char> cel3;
    deque <char> cel4;
    deque <char> cel5;
    int wynik;
    char tor1[4] = {'A','A','B','B'};
    char tor2[4] = {'A','B','A','B'};
    char tor3[3] = {'C','D','D'};
    char tor4[4] = {'A','B','B','C'};
    char tor5[3] = {'C','D','D'};

    public:

    void generowanie()
    {
        srand( time( NULL ) );
        for(int i=0; i<15; i++)
        {
            int losowa = ((rand()%4)+65);
            pociag.push_front(char(losowa));
        }
    }

    void wyswietlanie()
    {
        cout << "Wybierz opcje zmiany toru (2-5)" << endl;
        cout << "Wcisnij przycisk (W) aby zwolonic wagon." << endl;
        cout << endl;
        cout << "Za kazde poprawne skompletowanie toru otrzymasz 10pkt" << endl;
        cout << "Kiedy będzie niemozliwe poprawne skompletowanie zostanie odjete 10 pkt" << endl;
        cout << endl;
        cout << "Wygrasz gdy osiagniesz 50 pkt" << endl;
        cout << "Przegrasz gdy liczba punktow bedzie mniejsza od 0" << endl;
        cout << "Wyjscie z gry - wcisnij (0)" << endl;
        cout << "POWODZENIA !!!" << endl;
        cout << endl;
        for(long long unsigned int i=0; i<pociag.size(); i++)
        {
            cout << pociag[i];
        }
        cout << " ======================================";
        cout << " Tor 1: [AABB]" << endl;
        cout << setw(25) << char(92) << char(92) << " (2)" << endl;
        cout << setw(26) << char(92) << char(92) << "===========================";
        cout << " Tor 2: [ABAB]" << endl;
        cout << setw(27) << char(92) << char(92) << " (3)" << endl;
        cout << setw(28) << char(92) << char(92) << "=========================";
        cout << " Tor 3: [CDD]" << endl;
        cout << setw(29) << char(92) << char(92) << " (4)" << endl;
        cout << setw(30) << char(92) << char(92) << "=======================";
        cout << " Tor 4: [ABBC]" << endl;
        cout << setw(31) << char(92) << char(92) << " (5)" << endl;
        cout << setw(32) << char(92) << char(92) << "=====================";
        cout << " Tor 5: [CDD]" << endl;
    }
    void Rozgrywka() {
        wynik = 0;
    }
    
    void  AktualnyWynik() {
        if (wynik >= 50) {
            cout << "Gratulacje! Wygrałeś!" << wynik << endl;
        }
        else if (wynik < 0) {
            cout << "Przegrałeś. Twój wynik jest mniejszy niż 0." << wynik << endl;
        }
        else {
            cout << "Twój aktualny wynik to: " << wynik << endl;
        }
    }
    void PoprawneSkompletowanie() {
        wynik += 10;
    }
    void BledneSkompletowanie() {
        wynik -= 10;
    }
};

int main()
{
    Stacja Kolejarz;
    Kolejarz.generowanie();
    Kolejarz.wyswietlanie();
    int opcja;
  do {
        cin >> opcja;

        switch (opcja) {
        case 2:
            cout << "Wybrano opcję 2" << endl;
            break;
        case 3:
            cout << "Wybrano opcję 3" << endl;
            break;
        case 4:
            cout << "Wybrano opcję 4" << endl;
            break;
        case 5:
            cout << "Wybrano opcję 5" << endl;
            break;
        case 0:
            cout << "Koniec programu" << endl;
            break;
        default:
            cout << "Nieprawidlowa opcja" << endl;
            break;
        }

    } while (opcja != 0);
    
    return 0;
}
